#!/bin/sh

base=$(pwd)

year() {
	year="${1}"
	for day in $(seq 1 25); do
		day "${year}" "${day}" || break
	done
}

day() {
	year="${1}"
	day="${2}"
	! test -d "${base}/${year}/${day}" && return 1
	echo "Day ${day} of ${year}"
	if test -f "${base}/${year}/${day}/main.lua"; then
		"${base}/test/run-lua.sh" "${base}/${year}/${day}" || return 1
	fi
}

help() {
	echo "Usage:"
	echo "  $0            run tests for every day of every year"
	echo "  $0 year       run tests for every day of <year>"
	echo "  $0 year day   run tests for the nth <day> of <year>"
}

while getopts "h" opt; do
	case "$opt" in
		h) help; return 0 ;;
	esac
done

shift $((OPTIND - 1))

if test "$#" = 1; then
	year "${1}"
	return $?
fi

if test "$#" = 2; then
	day "${1}" "${2}"
	return $?
fi

for year in 20*; do
	year "${year}"
done
